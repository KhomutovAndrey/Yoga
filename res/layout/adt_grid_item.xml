<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/kitLayout">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/image_assana"
        android:layout_gravity="center"
        android:layout_width="@dimen/image_assana_height"
        android:layout_height="@dimen/image_assana_height"
        android:layout_marginTop="@dimen/margin_image"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:text="TextView1TextView"
        android:layout_width="@dimen/text_assana_width"
        android:layout_height="match_parent"
        android:id="@+id/text_assana"
        android:maxLines="2"
        android:layout_gravity="bottom|center_horizontal"
        android:clickable="false"
        android:focusable="false"
        android:layout_margin="5dp"
        android:gravity="center_horizontal" />
</LinearLayout>
